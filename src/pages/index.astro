---
import BaseLayout from "../layouts/baseLayout/BaseLayout.astro";
import Hero from "../components/hero/Hero.astro";

import styles from "./index.module.scss";
---

<BaseLayout type="fixed" title="Nicodes" class={styles.pageContainer}>
  <Hero />
</BaseLayout>

<script>
  import { headerBorderAnimate } from "../components/header/header";

  headerBorderAnimate("open");

  document.addEventListener(
    "astro:after-swap",
    () => window.location.pathname === "/" && headerBorderAnimate("open")
  );
</script>
