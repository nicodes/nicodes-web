---
import Circle from '../circle/Circle.astro';

import styles from "./iframeBrowser.module.scss";

interface Props {
  src: string;
}

const { src } = Astro.props;

const circleDiameter = '12px';
const circleOpacity = 0.8;
---

<div class={styles.browserContainer}>
  <div class={styles.browserHeader}>
    <Circle color="var(--red)" diameter={circleDiameter}/>
    <Circle color="var(--yellow)" diameter={circleDiameter}/>
    <Circle color="var(--green)" diameter={circleDiameter}/>
  </div>
  <div class={styles.iframeContainer}>
    <iframe src={src}></iframe>
  </div>
</div>
